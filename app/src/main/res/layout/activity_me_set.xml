<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/index_bg"
    android:orientation="vertical"
    tools:context="wtwd.com.superapp.activity.MeSetActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite">

        <include layout="@layout/tool_bar" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/index_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_62"
            android:layout_marginTop="1dp"
            android:background="@drawable/linearlayout_click_bg">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/common_14"

                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="勿扰模式"
                    android:textColor="@color/color_33"
                    android:textSize="@dimen/text_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_2"
                    android:text="勿扰模式开启将不接收消息推送"
                    android:textColor="@color/color_99"
                    android:textSize="@dimen/text_10" />
            </LinearLayout>

            <wtwd.com.superapp.widget.SwitchView
                android:layout_width="@dimen/common_36"
                android:layout_height="@dimen/common_18"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/common_14"
                app:hasShadow="true"
                app:isOpened="true"
                app:offColor="@color/color_99"
                app:offColorDark="@color/color_99"
                app:primaryColor="@color/blue_btn_start_color"
                app:primaryColorDark="@color/transparent"
                app:shadowColor="@color/color_99"


                />


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_44"
            android:layout_marginTop="1dp"
            android:background="@drawable/linearlayout_click_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/common_14"
                android:text="清除缓存"
                android:textColor="@color/color_33"
                android:textSize="@dimen/text_14" />

            <ImageView
                android:id="@+id/img1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/common_14"
                android:background="@mipmap/right" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/common_14"
                android:layout_toLeftOf="@id/img1"
                android:text="37M"
                android:textColor="@color/color_66"
                android:textSize="@dimen/text_12"

                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_44"
            android:layout_marginTop="1dp"
            android:background="@drawable/linearlayout_click_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/common_14"
                android:text="地区"
                android:textColor="@color/color_33"
                android:textSize="@dimen/text_14" />

            <ImageView
                android:id="@+id/img2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/common_14"
                android:background="@mipmap/right" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/common_14"
                android:layout_toLeftOf="@id/img2"
                android:text="大陆地区(推荐)"
                android:textColor="@color/color_66"
                android:textSize="@dimen/text_12"

                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_44"
            android:layout_marginTop="1dp"
            android:background="@drawable/linearlayout_click_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/common_14"
                android:text="关于我们"
                android:textColor="@color/color_33"
                android:textSize="@dimen/text_14" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/common_14"
                android:background="@mipmap/right" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom|center_vertical"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_login_out"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_36"
                android:layout_marginBottom="@dimen/common_46"
                android:layout_marginLeft="@dimen/common_42"
                android:layout_marginRight="@dimen/common_42"
                android:background="@drawable/selector_btn_red"
                android:text="退出登录"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_14" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>
