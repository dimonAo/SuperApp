<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/common_102"
    android:layout_height="@dimen/common_116"
    android:layout_marginBottom="@dimen/common_4"
    android:layout_marginTop="@dimen/common_4"
    android:gravity="center"
    app:cardBackgroundColor="@color/colorWhite"
    app:cardCornerRadius="@dimen/common_4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_device"
            android:layout_width="@dimen/common_88"
            android:layout_height="@dimen/common_76" />

        <TextView
            android:id="@+id/text_device_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_2"
            android:textColor="@color/color_33"
            android:textSize="@dimen/text_12" />
    </LinearLayout>
</android.support.v7.widget.CardView>