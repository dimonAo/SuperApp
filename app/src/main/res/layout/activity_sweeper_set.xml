<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/index_bg"
    android:orientation="vertical"
    tools:context="wtwd.com.superapp.activity.SweeperSetActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite">

        <include layout="@layout/tool_bar" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_54"
        android:layout_marginTop="@dimen/common_4"
        android:background="@drawable/linearlayout_click_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_14"
            android:text="设备名称"
            android:textColor="@color/color_33"
            android:textSize="@dimen/text_14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/common_14"
            android:layout_marginRight="@dimen/common_14"
            android:text="扫地机"
            android:textColor="@color/color_99"
            android:textSize="@dimen/text_14" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_54"
        android:layout_marginTop="1dp"
        android:background="@drawable/linearlayout_click_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_14"
            android:text="设备ID"
            android:textColor="@color/color_33"
            android:textSize="@dimen/text_14" />

        <TextView
            android:id="@+id/text_device_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/common_14"
            android:layout_marginRight="@dimen/common_14"
            android:textColor="@color/color_99"
            android:textSize="@dimen/text_14" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_appointment_clean"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_54"
        android:layout_marginTop="1dp"
        android:background="@drawable/linearlayout_click_bg"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/common_14"
            android:text="预约清扫"
            android:textColor="@color/color_33"
            android:textSize="@dimen/text_14" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/common_14"
            android:background="@mipmap/right" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_seepage"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_54"
        android:layout_marginTop="1dp"
        android:background="@drawable/linearlayout_click_bg"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/common_14"
            android:text="拖地水量"
            android:textColor="@color/color_33"
            android:textSize="@dimen/text_14" />


        <ImageView
            android:id="@+id/img_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/common_14"
            android:background="@mipmap/right" />

        <TextView
            android:id="@+id/text_seepage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/common_14"
            android:layout_toLeftOf="@id/img_a"
            android:textColor="@color/color_99"
            android:textSize="@dimen/text_14" />


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/relative_position_sweeper"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_54"
        android:layout_marginTop="1dp"
        android:background="@drawable/linearlayout_click_bg"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/common_14"
            android:text="定位扫地机"
            android:textColor="@color/color_33"
            android:textSize="@dimen/text_14" />

        <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:layout_marginLeft="@dimen/common_14"-->
        <!--android:layout_marginRight="@dimen/common_14"-->
        <!--android:textColor="@color/color_99"-->
        <!--android:textSize="@dimen/text_14" />-->

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/common_14"
            android:background="@mipmap/right" />


    </RelativeLayout>

    <Button
        android:id="@+id/btn_delete_device"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_38"
        android:layout_marginLeft="@dimen/common_40"
        android:layout_marginRight="@dimen/common_40"
        android:layout_marginTop="@dimen/common_40"
        android:background="@drawable/selector_btn_red"
        android:gravity="center"
        android:text="解除绑定"
        android:textColor="@color/colorWhite_fb"
        android:textSize="@dimen/text_12" />

</LinearLayout>
