<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/common_58"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:alpha="0.9"
    android:background="@color/colorWhite"
    android:layout_marginTop="@dimen/common_4"
    android:layout_marginBottom="@dimen/common_4"
    app:cardCornerRadius="@dimen/common_4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_device_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_14"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_10" />

            <TextView
                android:id="@+id/text_device_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_10" />

            <TextView
                android:id="@+id/text_device_on_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_2"
                android:textColor="@color/colorNineO"
                android:textSize="@dimen/text_8" />
        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>
