<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <shape>
            <gradient android:angle="270" android:endColor="@color/blue_btn_end_color" android:startColor="@color/blue_btn_start_color" />
            <corners android:radius="999dp" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/blue_btn_press" />
            <corners android:radius="999dp" />
        </shape>
    </item>

</selector>