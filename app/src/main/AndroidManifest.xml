<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="wtwd.com.superapp">

    <!-- 联网权限 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 网络状态 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- wifi状态 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!-- wifi状态改变 -->
    <uses-permission android:name="android.permission.CHANGE_WIFI_MULTICAST_STATE" />

    <application
        android:name=".application.SuperApplication"
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/MyAppTheme">
        <activity
            android:name=".activity.MainActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.SweeperActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.ConfigWifiActivity"
            android:configChanges="mcc|mnc|locale|keyboard|keyboardHidden|navigation|orientation|screenSize|fontScale"
            android:label="MulticastSmartLinkerActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.ChooseDeviceTypeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.JoinWifiFailedActivity"
            android:screenOrientation="portrait" />

        <service
            android:name="cn.xlink.sdk.v5.module.main.KeepAliveService"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activity.AddSweeperAlarmActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.SweeperSetActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activity.SweeperDetailMapActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>